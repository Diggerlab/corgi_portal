<%= form_for :response, :html=>{:class=> ""}, :url=>{:controller=>"responses",:action=>"create"} do |f| %>
  <div class="filed">
    <%=f.label :content%><br/>
    <%=f.text_area :content%><br/>
    <%= f.hidden_field :token, :value => @token %>
    <%=f.hidden_field :feedback_id, :value => @feedback.id%>
    <%= f.hidden_field :ip, :value => @ip %>
  </div>

  <div class="actions">
    <%= f.submit "回复"%><br/>
  </div>

<%end%>